<hmtl>

    <head>
        <title>Register Page</title>
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css">
        <link rel="icon" href="/fosanlogo.png" type="image/x-icon">
    </head>

    <body>
        <div class="section">
            <div class="container">
                <div class="innercontainer">
                    <div class="loginbox">
                        <div>
                            <img src="/fosanlogo.png" height="120px" class="avatar">
                            <br>
                            <h1 id="textlogin">Login :</h1>
                        </div>
                        <div class="box">
                            <form action="/users/login" method="POST">
                                <h3>Username :</h3>
                                <br>
                                <input id="username" class="input" type="text" required name="name"
                                    placeholder="Enter Username" style="margin-bottom: 5px;">
                                <h3 style="margin-top: 5px;">Password :</h3>
                                <br>
                                <input id="pass" class="input" required type="Password" name="password"
                                    placeholder="Enter Password">
                                <div class="forgotpassword">
                                    <a href="https://www.tokopedia.com/find/obat-anti-lupa"
                                        style="text-decoration: none; color: #000; margin-top: 10px; margin-bottom: 10px;">Forgot
                                        Password</a>
                                </div>
                                <div class="buttoncontainer">
                                    <button type="submit" class="btn btn-default" id="simpan">Login</button>
                                </div>
                                <div class="signup">
                                    <a href="/users/register" style="text-decoration: none; color: #000;">Sign Up</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>

    </body>
    <% if (pesan) {%>
    <script>
        alert('<%=pesan%>')
    </script>

    <%}%>
</hmtl>

<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
    crossorigin="anonymous"></script>


<script>
    $('#simpan').click(function (e) {
        e.preventDefault();
        let p = {
            name: $('#username').val(),
            password: $('#pass').val()
        }
        $.post("/users/login", p, function (data) {
            console.log(data.pesan)
            if (data.pesan == 'sukses') {
                window.location.href = "/todo";
            } else if (data.pesan == "salahpass") {
                $('#textlogin').html('PASSWORD SALAH!')
            } else {
                $('#textlogin').html('USERNAME BELUM TERDAFTAR')
            }
        });
    })

</script>